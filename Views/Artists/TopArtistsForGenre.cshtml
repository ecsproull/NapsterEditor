@model ArtistsViewModel

@{
    ViewData["Title"] = "Genre Stations";
    Layout = "~/Views/Shared/_StartLayout.cshtml";
    ViewBag.PageHeading = "Stations";
}

<form action="/Artists/DisplayArtistsForGenre" method="post">
    <div>
        @Html.DropDownListFor(m => m.SelectedGenreId, Model.GetGenresListItems(), new { @style = "height: 25px;" })
        @Html.ValidationMessageFor(m => m.SelectedGenreId)
    </div>
    <button class="btn mt-3 mb-3" type="submit">Submit</button>
</form>

<table class="tracksTable">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Href</th>
    </tr>
    @foreach (var m in Model.ArtistsList)
    {
        <tr>
            <td>@m.Id</td>
            <td>@m.Name</td>
            <td>@m.Href</td>
        </tr>
    }
</table>