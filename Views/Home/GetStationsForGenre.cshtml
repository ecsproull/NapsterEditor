@model GenresViewModel

@{
    ViewData["Title"] = "Genre Stations";
    Layout = "~/Views/Shared/_StartLayout.cshtml";
    ViewBag.PageHeading = "Stations";
}

@Html.Partial("GenrePicker", Model.GenrePickerModel);

@if (Model.Stations.Count() != 0)
{
    <table class="tracksTable">
        <tr>
            <th>Name</th>
            <th>Description</th>

        </tr>
        @foreach (var m in Model.Stations)
        {
            <tr>
                <td style="min-width: 200px">@m.Name</td>
                <td>@m.Description</td>
            </tr>
        }
    </table>
}