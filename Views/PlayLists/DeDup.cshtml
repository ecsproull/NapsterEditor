@model Tracks

@{
    Layout = "_StartLayout";
    ViewBag.Title = "DeDup";
    ViewBag.PageHeading = "Duplicates";
}

<p><h3>All items not selected will be removed from the  playlist.</h3></p>

<div class="playlist">
    <form action="/PlayLists/RemoveTracks" method="post">
        <table class="tracksTable">
            <tr>
                <th>Keep</th>
                <th>Title</th>
                <th>Artist</th>
                <th>Album</th>
            </tr>
            @for (int i = 0; i < Model.TrackList.Count(); i++)
            {
                <tr>
                    <td>@Html.CheckBoxFor(x => x.TrackList.ElementAt(i).IsSelected)</td>
                    <td>
                        @Model.TrackList.ElementAt(i).Name)
                        @Html.HiddenFor(x => x.TrackList.ElementAt(i).Name)
                    </td>
                    <td>
                        @Model.TrackList.ElementAt(i)].Artist
                        @Html.HiddenFor(x => x.TrackList.ElementAt(i).ArtistName)
                    </td>
                    <td>
                        @Model.TrackList.ElementAt(i)].Album
                        @Html.HiddenFor(x => x.TrackList.ElementAt(i).Id)
                        @Html.HiddenFor(x => x.TrackList.ElementAt(i).AlbumName)
                    </td>
                </tr>
            }
        </table>
        <button class="btn-login" type="submit">Submit</button>
    </form>
</div>

